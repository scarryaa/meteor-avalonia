<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:meteor.ViewModels;assembly=meteor.ViewModels"
             x:DataType="viewModels:ScrollableTextEditorViewModel"
             x:Class="meteor.App.Views.ScrollableTextEditor">

    <ScrollViewer Name="ScrollViewer"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  Offset="{Binding Offset, Mode=TwoWay}" />
</UserControl>