<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <!-- SystemAccentColor -->
    <Color x:Key="SystemAccentColor">#FF0078D7</Color>
    <Color x:Key="SystemAccentColorDark1">#FF0063B1</Color>
    <Color x:Key="SystemAccentColorDark2">#FF004E8C</Color>
    <Color x:Key="SystemAccentColorDark3">#FF003966</Color>
    <Color x:Key="SystemAccentColorLight1">#FF60AFFF</Color>
    <Color x:Key="SystemAccentColorLight2">#FF8BC8FF</Color>
    <Color x:Key="SystemAccentColorLight3">#FFB7E0FF</Color>

    <!-- Common Properties -->
    <system:Double x:Key="TextEditorFontSize">13</system:Double>
    <system:Double x:Key="GutterFontSize">13</system:Double>
    <system:Double x:Key="TabFontSize">14</system:Double>
    <Thickness x:Key="TabBorderThickness">0,0,1,0</Thickness>
    <Thickness x:Key="TabPadding">14,4,2,4</Thickness>

    <!-- Common Font Families -->
    <FontFamily x:Key="TextEditorFontFamily">/Assets/Fonts/SanFrancisco/SF-Mono-Medium.otf#SF Mono</FontFamily>
    <FontFamily x:Key="GutterFontFamily">/Assets/Fonts/SanFrancisco/SF-Mono-Medium.otf#SF Mono</FontFamily>

    <!-- Common Colors -->
    <Color x:Key="TabDirtyIndicator">#8BCDC0</Color>
    <Color x:Key="TextEditorSelection">#648BCDCD</Color>

</ResourceDictionary>