<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:meteor.UI.Converters"
             xmlns:viewModels="clr-namespace:meteor.UI.ViewModels"
             xmlns:views="clr-namespace:meteor.UI.Views"
             x:Class="meteor.UI.Views.EditorView"
             Focusable="True"
             x:DataType="viewModels:EditorViewModel">

    <UserControl.Resources>
        <converters:VectorToAvaloniaVectorConverter x:Key="VectorConverter" />
    </UserControl.Resources>

    <Grid ColumnDefinitions="Auto,*">
        <views:GutterView Grid.Column="0"
                          x:Name="GutterView"
                          ViewModel="{Binding GutterViewModel}"
                          MinWidth="60"
                          Width="{Binding GutterViewModel.GutterWidth}"
                          HorizontalAlignment="Left" />

        <ScrollViewer Grid.Column="1"
                      x:Name="ScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Offset="{Binding ScrollOffset, Mode=TwoWay, Converter={StaticResource VectorConverter}}">
            <Panel x:Name="EditorPanel" Background="Transparent" />
        </ScrollViewer>
    </Grid>
</UserControl>