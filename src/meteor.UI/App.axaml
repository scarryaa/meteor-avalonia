<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="meteor.UI.App"
             RequestedThemeVariant="Default">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <MergeResourceInclude Source="/Resources/Fonts.axaml" />
                <MergeResourceInclude Source="/Resources/Controls/ScrollViewer.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/TabItemStyles.axaml" />
        <StyleInclude Source="/Styles/ContentPresenterStyles.axaml" />
        <StyleInclude Source="/Styles/HorizontalScrollableTabControlStyles.axaml" />
        <StyleInclude Source="/Styles/TabItemStyles.axaml" />
        <StyleInclude Source="/Styles/ScrollBarStyles.axaml" />
    </Application.Styles>
</Application>