<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:meteor.ViewModels"
        x:Class="meteor.Views.CompletionPopup"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="None"
        SizeToContent="Height"
        MaxHeight="500"
        Background="Transparent"
        Width="200" Height="100"
        Focusable="False"
        ShowInTaskbar="False"
        Deactivated="OnDeactivated">

    <ScrollViewer CornerRadius="6">
        <Border>
            <StackPanel>
                <ListBox x:Name="SuggestionListBox" x:DataType="viewModels:CompletionPopupViewModel"
                         ItemsSource="{Binding CompletionItems}"
                         Focusable="True"
                         GotFocus="SuggestionListBox_GotFocus">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Label}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>