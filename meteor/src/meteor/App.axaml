<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="meteor.App"
             xmlns:ui="clr-namespace:meteor.UI;assembly=meteor.UI"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <ui:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://meteor.UI/Resources/Fonts.axaml" />
                <ResourceInclude Source="avares://meteor.UI/Resources/Controls/ScrollViewer.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://meteor.UI/Styles/ScrollBarStyles.axaml" />
    </Application.Styles>
</Application>